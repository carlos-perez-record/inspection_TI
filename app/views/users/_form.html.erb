<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1><%= form_titleuser %></h1>
      <!--Se agrega codigo que muestra mensaje de error si no se cumple las validaciones-->
      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <!--Fin Codigo de los mensajes de error-->
      <%= form_for @user do |u| %>
        <div class="form-group">
          <%= u.email_field :email, class: "form-control input-lg", placeholder: "Email" %>
        </div>

        <div class="form-group">
          <%= u.password_field :password, class: "form-control input-lg", placeholder: "ContraseÃ±a" %>
        </div>

        <div class="form-group">
          <%= u.text_field :name, class: "form-control input-lg", placeholder: "Nombre" %>
        </div>

        <div class="form-group">
          <%= u.number_field :cedula, class: "form-control input-lg", placeholder: "Cedula" %>
        </div>

        <div class="actions">
          <%= u.submit form_titleuser, class: "btn btn-primary btn-block btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
